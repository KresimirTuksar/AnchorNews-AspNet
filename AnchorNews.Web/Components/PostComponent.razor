<div class="card m-3" style="min-width: 18rem; max-width:30.5%;" @onclick="() => onPostClick(Post.Id)">
    <div class="card-header">
        <h3>@Post.Headline</h3>
    </div>
    <img class="card-img-top imageThumbnail" src="@Post.ImageUrl" />
    <p class="card-text">@Post.ShortDescription</p>
</div>